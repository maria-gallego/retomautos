<div class="container py-5">
  <div class="row">
    <div class="col-sm-6">
      <% if @existing_client.present? %>
        <h5 class="text-danger">
          <span>El cliente ya existe. </span>
          <%= link_to "Ir al perfil del cliente", client_path(@existing_client.id) %>
        </h5>
      <% end %>
      <%= form_with(model: @client, local: true) do |f| %>
        <%= render 'layouts/error_messages', object: @client %>
        <div class="card">
          <h5 class="card-header">Nuevo Cliente</h5>
          <div class="card-body">
            <div class="form-group">
              <%= f.label :name, 'Nombre' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
              <%= f.label :phone, 'TelÃ©fono' %>
              <%= f.phone_field :phone, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, 'Email' %>
              <%= f.email_field :email, placeholder: 'ejemplo@ejemplo.com', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "Crear", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>